generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}

enum LoginType {
  Normal
  GitHub
  Gmail
  Facebook
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  image         String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  phone         String    @unique
  password      String?
  loginType     LoginType @default(Normal)
  address       Address?
  role          Role      @default(User)
}

type Address {
  name    String?
  mobile  String?
  pincode Int?
  map     String?
  address String?
}

enum Role {
  Admin
  Agent
  User
}